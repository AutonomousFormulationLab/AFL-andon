{
  "name": "AFL-andon",
  "version": "1.0.0",
  "description": "AFL server command app / Andon board",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder",
    "build:win": "electron-builder --win nsis",
    "build:mac": "electron-builder --mac dmg",
    "build:linux": "electron-builder --linux AppImage",
    "check-package": "node scripts/validate-package.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pbeaucage/AFL-andon.git"
  },
  "author": {
    "name": "Peter Beaucage",
    "email": "peter.beaucage@nist.gov"
  },
  "license": "NIST-PD-fallback",
  "bugs": {
    "url": "https://github.com/pbeaucage/AFL-andon/issues"
  },
  "homepage": "https://github.com/pbeaucage/AFL-andon#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "fs-extra": "^11.3.0",
    "jsoneditor": "^10.2.0",
    "node-fetch": "^3.3.2",
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "gov.nist.AFL-andon",
    "productName": "AFL Andon",
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities",
      "icon": "assets/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icons/png/512x512.png",
      "category": "Utility"
    }
  }
}
